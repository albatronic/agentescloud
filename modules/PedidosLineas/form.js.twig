{# js PedidosLineas #}

{% extends '_global/js.html.twig' %}

{% block js %}

    {{ parent() }}   
    <script>
        $('#Codigo0').focus();
        
        function ajaxHistoricoVentas(idArticulo, idCliente, periodo) {

            if (idArticulo === '') {
                idArticulo = '0';
            }

            $.ajax({
                url: appPath + '/apiRest/HistoricoVentas/' + idArticulo + '/' + idCliente + '/' + periodo + '/html',
                dataType: 'html',
                type: 'get',
                success: function (html) {
                    $("#dialogHistoricoVentas .modal-body").html(html);
                }
            });
        }

        function guardar(keyLinea) {
            $('#action' + keyLinea).val('edit');
            $('#accion' + keyLinea).val('G');
            $('#formLinea' + keyLinea).submit();
        }
        function borrar(keyLinea) {
            $('#action' + keyLinea).val('edit');
            $('#accion' + keyLinea).val('B');
            $('#formLinea' + keyLinea).submit();
        }
        function crear(keyLinea) {
            $('#action' + keyLinea).val('new');
            $('#formLinea' + keyLinea).submit();
        }
    </script>
{% endblock %}