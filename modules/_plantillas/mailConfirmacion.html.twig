        <!-- BEGIN PAGE LEVEL PLUGIN STYLES -->
        <link href="{{appUrl}}/assets/global/plugins/bootstrap-daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css"/>
        <link href="{{appUrl}}/assets/global/plugins/fullcalendar/fullcalendar.min.css" rel="stylesheet" type="text/css"/>
