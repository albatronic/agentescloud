{# _Emergente/dialogoExportar.html.twig #}


<div class="modal fade" id="exportar" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Indique el formato de exportación de {{values.titulo}}</h4>
            </div>
            <div class="modal-body">    
                {% if export_types | length > 0%}
                <select id="selectExportType" class="Select" style="width: 100px; margin-top: 20px;">
                    {% for value in export_types %}
                        <option value="{{value}}">{{value}}</option>
                    {% endfor %}
                </select>
                {% else %}
                    <p>No se han definido los tipos de exportación</p>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary"
                        onClick="$('#action{{position}}').val('exportar');$('#exportType{{position}}').val($('#selectExportType').val());
                                document.getElementById('paginacion{{position}}').submit();">Exportar</button>
            </div>            
        </div>
    </div>                    
</div>